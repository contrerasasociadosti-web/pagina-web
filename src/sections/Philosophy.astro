---
import { CheckCircle, Eye, Heart, Target } from '@lucide/astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Card from '@/components/card/Card.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4 lg:px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">{t('mvv.title')}</h2>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <Card class="text-center p-8 border-gray-200 hover:shadow-lg transition-shadow">
        <div class="mb-6">
          <div
            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto"
          >
            <Target class="h-8 w-8 text-primary-600" />
          </div>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-4">{t('mvv.mission.title')}</h3>
        <p class="text-slate-600 leading-relaxed">{t('mvv.mission.description')}</p>
      </Card>

      <Card class="text-center p-8 border-gray-200 hover:shadow-lg transition-shadow">
        <div class="mb-6">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto">
            <Eye class="h-8 w-8 text-green-600" />
          </div>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-4">{t('mvv.vision.title')}</h3>
        <p class="text-slate-600 leading-relaxed">{t('mvv.vision.description')}</p>
      </Card>

      <Card class="text-center p-8 border-gray-200 hover:shadow-lg transition-shadow">
        <div class="mb-6">
          <div
            class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto"
          >
            <Heart class="h-8 w-8 text-purple-600" />
          </div>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-4">{t('mvv.values.title')}</h3>
        <div class="space-y-2 text-slate-600">
          <div class="flex items-center justify-center space-x-2">
            <CheckCircle class="h-4 w-4 text-green-600" />
            <span>{t('mvv.values.integrity')}</span>
          </div>
          <div class="flex items-center justify-center space-x-2">
            <CheckCircle class="h-4 w-4 text-green-600" />
            <span>{t('mvv.values.excellence')}</span>
          </div>
          <div class="flex items-center justify-center space-x-2">
            <CheckCircle class="h-4 w-4 text-green-600" />
            <span>{t('mvv.values.commitment')}</span>
          </div>
          <div class="flex items-center justify-center space-x-2">
            <CheckCircle class="h-4 w-4 text-green-600" />
            <span>{t('mvv.values.respect')}</span>
          </div>
        </div>
      </Card>
    </div>
  </div>
</section>
