---
import { Building2, Globe, House, Scale, Shield, Users } from '@lucide/astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Card from '@/components/card/Card.astro';
import CardContent from '@/components/card/CardContent.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4 lg:px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">{t('services.title')}</h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto">
        {t('services.description')}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Derecho Penal -->
      <Card
        class="group hover:shadow-xl transition-all duration-300 border-primary-200 hover:border-primary-300"
      >
        <CardContent class="p-8 text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto group-hover:bg-primary-200 transition-colors"
            >
              <Shield class="h-8 w-8 text-primary-600" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t('services.criminal.title')}</h3>
          <p class="text-slate-600 mb-4">
            {t('services.criminal.description')}
          </p>
          <ul class="text-sm text-slate-500 space-y-1">
            <li>• {t('services.criminal.points1')}</li>
            <li>• {t('services.criminal.points2')}</li>
            <li>• {t('services.criminal.points3')}</li>
          </ul>
        </CardContent>
      </Card>

      <!-- Derecho Civil -->
      <Card
        class="group hover:shadow-xl transition-all duration-300 border-primary-200 hover:border-primary-300"
      >
        <CardContent class="p-8 text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto group-hover:bg-blue-200 transition-colors"
            >
              <Scale class="h-8 w-8 text-blue-600" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t('services.civil.title')}</h3>
          <p class="text-slate-600 mb-4">
            {t('services.civil.description')}
          </p>
          <ul class="text-sm text-slate-500 space-y-1">
            <li>• {t('services.civil.points1')}</li>
            <li>• {t('services.civil.points2')}</li>
            <li>• {t('services.civil.points3')}</li>
          </ul>
        </CardContent>
      </Card>

      <!-- Derecho Familiar -->
      <Card
        class="group hover:shadow-xl transition-all duration-300 border-primary-200 hover:border-primary-300"
      >
        <CardContent class="p-8 text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto group-hover:bg-green-200 transition-colors"
            >
              <Users class="h-8 w-8 text-green-600" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t('services.family.title')}</h3>
          <p class="text-slate-600 mb-4">
            {t('services.family.description')}
          </p>
          <ul class="text-sm text-slate-500 space-y-1">
            <li>• {t('services.family.points1')}</li>
            <li>• {t('services.family.points2')}</li>
            <li>• {t('services.family.points3')}</li>
          </ul>
        </CardContent>
      </Card>

      <!-- Derecho Corporativo -->
      <Card
        class="group hover:shadow-xl transition-all duration-300 border-primary-200 hover:border-primary-300"
      >
        <CardContent class="p-8 text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto group-hover:bg-purple-200 transition-colors"
            >
              <Building2 class="h-8 w-8 text-purple-600" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t('services.corporate.title')}</h3>
          <p class="text-slate-600 mb-4">
            {t('services.corporate.description')}
          </p>
          <ul class="text-sm text-slate-500 space-y-1">
            <li>• {t('services.corporate.points1')}</li>
            <li>• {t('services.corporate.points2')}</li>
            <li>• {t('services.corporate.points3')}</li>
          </ul>
        </CardContent>
      </Card>

      <!-- Derecho Inmobiliario -->
      <Card
        class="group hover:shadow-xl transition-all duration-300 border-primary-200 hover:border-primary-300"
      >
        <CardContent class="p-8 text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto group-hover:bg-orange-200 transition-colors"
            >
              <House class="h-8 w-8 text-orange-600" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t('services.realestate.title')}</h3>
          <p class="text-slate-600 mb-4">
            {t('services.realestate.description')}
          </p>
          <ul class="text-sm text-slate-500 space-y-1">
            <li>• {t('services.realestate.points1')}</li>
            <li>• {t('services.realestate.points2')}</li>
            <li>• {t('services.realestate.points3')}</li>
          </ul>
        </CardContent>
      </Card>

      <!-- Derecho Migratorio -->
      <Card
        class="group hover:shadow-xl transition-all duration-300 border-primary-200 hover:border-primary-300"
      >
        <CardContent class="p-8 text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 bg-zinc-100 rounded-full flex items-center justify-center mx-auto group-hover:bg-zinc-200 transition-colors"
            >
              <Globe class="h-8 w-8 text-zinc-600" />
            </div>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t('services.immigration.title')}</h3>
          <p class="text-slate-600 mb-4">
            {t('services.immigration.description')}
          </p>
          <ul class="text-sm text-slate-500 space-y-1">
            <li>• {t('services.immigration.points1')}</li>
            <li>• {t('services.immigration.points2')}</li>
            <li>• {t('services.immigration.points3')}</li>
          </ul>
        </CardContent>
      </Card>
    </div>
  </div>
</section>
