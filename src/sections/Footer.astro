---
import { Facebook, Instagram, Linkedin, Twitter } from '@lucide/astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Logo from '@/assets/logoContrerasMini.svg';
import constants from '@/utils/constants';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-primary-800 text-white py-12">
  <div class="container mx-auto px-4 lg:px-6">
    <div class="grid md:grid-cols-4 gap-8">
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <Logo class="size-14 fill-white" />
          <div>
            <h3 class="text-lg font-bold">{constants.businessName}</h3>
            <p class="text-sm text-primary-200">{constants.bussinessSubtitle}</p>
          </div>
        </div>
        <p class="text-primary-300 text-sm">{t('footer.description')}</p>
        <div class="flex space-x-4 mt-4">
          <a
            href={constants.facebook}
            target="_blank"
            class="text-gray-400 hover:text-white transition-colors"
          >
            <Facebook class="h-5 w-5" />
          </a>
          <a
            href={constants.x}
            target="_blank"
            class="text-gray-400 hover:text-white transition-colors"
          >
            <Twitter class="h-5 w-5" />
          </a>
          <a
            href={constants.instagram}
            target="_blank"
            class="text-gray-400 hover:text-white transition-colors"
          >
            <Instagram class="h-5 w-5" />
          </a>
          <a
            href={constants.linkedin}
            target="_blank"
            class="text-gray-400 hover:text-white transition-colors"
          >
            <Linkedin class="h-5 w-5" />
          </a>
        </div>
      </div>

      <div>
        <h4 class="font-semibold mb-4">Servicios</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>
            <a href="#" class="hover:text-primary-100 transition-colors"> Derecho Penal </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary-100 transition-colors"> Derecho Civil </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary-100 transition-colors"> Derecho Familiar </a>
          </li>
          <li>
            <a href="#" class="hover:text-primary-100 transition-colors"> Derecho Corporativo </a>
          </li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-4">Empresa</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>
            <a href="#" class="hover:text-white transition-colors"> Nosotros </a>
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"> Nuestro Equipo </a>
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"> Casos de Éxito </a>
          </li>
          <li>
            <a href="#" class="hover:text-white transition-colors"> Blog Legal </a>
          </li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-4">Contacto</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>{constants.phoneNumber}</li>
          <li class="break-words">{constants.email}</li>
          <li>
            {constants.address}
            <br />
            {constants.location}
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-primary-700 mt-8 pt-8 text-center">
      <p class="text-sm text-primary-300">
        © {new Date().getFullYear()}
        {constants.businessName}. {t('footer.rights')}
      </p>
    </div>
  </div>
</footer>
