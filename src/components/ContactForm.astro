---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Card from './card/Card.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Card class="p-8 border-primary-200">
  <h3 class="text-2xl font-bold text-primary-800 mb-6">{t('contact.title')}</h3>
  <form class="space-y-4">
    <div class="grid sm:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-2"
          >{t('contact.name.label')}</label
        >
        <input
          placeholder={t('contact.name.placeholder')}
          class="w-full rounded-md border px-3 py-2 text-sm border-gray-300"
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-2"
          >{t('contact.phone.label')}</label
        >
        <input
          placeholder={t('contact.phone.placeholder')}
          class="w-full rounded-md border px-3 py-2 text-sm border-gray-300"
        />
      </div>
    </div>
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-2">{t('contact.email.label')}</label
      >
      <input
        type="email"
        placeholder={t('contact.email.placeholder')}
        class="w-full rounded-md border px-3 py-2 text-sm border-gray-300"
      />
    </div>
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-2"
        >{t('contact.subject.label')}</label
      >
      <select
        class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-slate-500 focus:border-transparent"
      >
        <option>{t('contact.subject.placeholder')}</option>
        <option value={t('contact.subject.options.criminal')}>
          {t('contact.subject.options.criminal')}
        </option>
        <option value={t('contact.subject.options.civil')}>
          {t('contact.subject.options.civil')}
        </option>
        <option value={t('contact.subject.options.family')}>
          {t('contact.subject.options.family')}
        </option>
        <option value={t('contact.subject.options.corporate')}>
          {t('contact.subject.options.corporate')}
        </option>
        <option value={t('contact.subject.options.realestate')}>
          {t('contact.subject.options.realestate')}
        </option>
        <option value={t('contact.subject.options.immigration')}>
          {t('contact.subject.options.immigration')}
        </option>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-2"
        >{t('contact.message.label')}</label
      >
      <textarea
        placeholder={t('contact.message.placeholder')}
        rows={4}
        class="w-full rounded-md border px-3 py-2 text-sm border-gray-300"></textarea>
    </div>
    <button class="w-full bg-primary-600 hover:bg-primary-700 text-white py-3 rounded-md"
      >{t('contact.submit')}</button
    >
  </form>
</Card>
